    <record id="view_move_form_inherit_account_extended" model="ir.ui.view">
        <field name="name">account.move.form.inherit.account.extended</field>
        <field name="model">account.move</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="before">
            <field name="currency_rate_raw" groups="base.group_multi_currency"/>
                <field name="sale_order_id" invisible="True"/>
                <field name="invoice_has_exchange_rate" groups="base.group_multi_currency"
                        attrs="{'readonly': [('sale_order_id','!=', False)], 'invisible': [('type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund'))]}"/>
                <field name="invoice_exchange_rate" groups="base.group_multi_currency"
                        attrs="{'invisible': [('invoice_has_exchange_rate','=',False)],'readonly': [('sale_order_id','not in', False)],}}"/>
            </xpath>
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="amount_total_exchange_rate" groups="base.group_multi_currency"
                    attr="{'invisible': [('invoice_exchange_allow_ok', '=', 'False')]"/>
            </xpath>
            <xpath expr="//page[@id='aml_tab']/field/tree/field[@name='analytic_account_id']" position="replace">
                <field name="analytic_account_id" optional="show" domain="['|', ('company_id', '=', parent.company_id), ('company_id', '=', False)]" groups="analytic.group_analytic_accounting" attrs="{'invisible': [('display_type', 'in', ('line_section', 'line_note'))]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_invoice_tree_inherit_account_extended" model="ir.ui.view">
        <field name="name">account.invoice.tree.inherit.account.extended</field>
        <field name="model">account.move</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_untaxed_signed']" position="before">
                <field name="currency_id" invisible="0"/>
                <field name="amount_total" string="Valor Factura"/>
                <field name="invoice_exchange_rate" string="Tasa de cambio"/>
            </xpath>
        </field>
    </record>
</odoo>
