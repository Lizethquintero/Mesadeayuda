<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="sale_order_website_report_template" name="Pedido de Venta Reporte">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
            <div class="page">
                <div class="row">
                    <div class="col">
                        <t t-raw="doc.qweb_presentation" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <t t-raw="doc.qweb_control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <span t-field="doc.qweb_company" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <span t-field="doc.qweb_summary" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <span t-raw="doc.qweb_description" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <span t-field="doc.qweb_solution" />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <span t-field="doc.qweb_wbs" />
                    </div>
                </div>
                <img class="img-fluid" src="/web/image/3554/welcome%20to%20breeze.PNG" />
                <attribute name="style" separator=";" add="margin-left:10px" />
                <div class="row address">
                    <div class="col-5">
                        <div t-field="doc.partner_id" t-options-widget="'contact'" />
                    </div>
                    <div class="col-5 offset-2" />
                </div>
                <div class="row">
                    <div class="col-5" />
                    <div class="col-5 offset-2">
                        <table class="table table-sm o_report_block_total">
                            <t t-set="total_currency_id" t-value="doc.pricelist_id.currency_id" />
                            <t t-set="total_amount_total" t-value="doc.amount_total" />
                            <t t-set="total_amount_untaxed" t-value="doc.amount_untaxed" />
                            <t t-set="total_amount_by_groups" t-value="doc.amount_by_group" />
                            <tr class="border-black o_subtotal">
                                <td>
                                    <strong>Subtotal</strong>
                                </td>
                                <td class="text-right">
                                    <span t-esc="total_amount_untaxed" t-options="{'widget': 'monetary', 'display_currency': total_currency_id}" />
                                </td>
                            </tr>
                            <t t-foreach="total_amount_by_groups" t-as="total_amount_by_group">
                                <tr>
                                    <t t-if="len(total_amount_by_group) == 1 and total_amount_untaxed == total_amount_by_group[2]">
                                        <td>
                                            <span t-esc="total_amount_by_group[0]" />
                                        </td>
                                        <td class="text-right o_price_total">
                                            <span t-esc="total_amount_by_group[3]" />
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td>
                                            <span t-esc="total_amount_by_group[0]" />
                                            <span>
                                                <span>on</span>
                                                <t t-esc="total_amount_by_group[4]" />
                                            </span>
                                        </td>
                                        <td class="text-right o_price_total">
                                            <span t-esc="total_amount_by_group[3]" />
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <t t-if="total_amount_by_groups is None">
                                <tr>
                                    <td>Taxes</td>
                                    <td class="text-right">
                                        <span t-esc="total_amount_total - total_amount_untaxed" t-options="{'widget': 'monetary', 'display_currency': total_currency_id}" />
                                    </td>
                                </tr>
                            </t>
                            <tr class="border-black o_total">
                                <td>
                                    <strong>Total</strong>
                                </td>
                                <td class="text-right">
                                    <span t-esc="total_amount_total" t-options="{'widget': 'monetary', 'display_currency': total_currency_id}" />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
                <table class="table o_report_block_table">
                    <thead>
                        <tr>
                            <th>
                                <span>Name</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="doc.sale_order_option_ids" t-as="table_line">
                            <td>
                                <span t-field="table_line.display_name" />
                            </td>
                        </tr>
                    </tbody>
                </table>
                <table class="table o_report_block_table">
                    <thead>
                        <tr>
                            <th>
                                <span>Name</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="docs" t-as="table_line">
                            <td>
                                <span t-field="table_line.display_name" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>  
        </t>
    </template>

    <template id="sale_order_website_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="sale_qweb.sale_order_website_report_template" t-lang="doc.partner_id.lang" />
            </t>
        </t>
    </template>

</odoo>